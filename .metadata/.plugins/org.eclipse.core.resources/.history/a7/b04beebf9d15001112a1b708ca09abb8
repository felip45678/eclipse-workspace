package colecciones;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.HashSet;
import java.util.Iterator;
import java.util.Map;
import java.util.Scanner;
import java.util.Set;

public class Clasific {

	public static void main(String[] args) {
		// Queremos clasificar las palabras que introduce un usuario según su longitud.
		// Por ejemplo, si introduce "Java" y "Hola", ambas van a la categoría de "4
		// letras".
		Map<Integer, ArrayList<String>> clasificador = new HashMap<>();
		Scanner sc = new Scanner(System.in);
		String palabra = "";
		int longitud = 0;
		boolean salir=false;
		while (!salir) {
			System.out.print("Introduce palabras hasta que escribas SALIR: ");
			palabra = sc.nextLine().trim();
			if(palabra.contains("SALIR")) {
				salir=true;
				
			}
			longitud = palabra.length();
			if (!clasificador.containsKey(longitud)) {
				clasificador.put(longitud, new ArrayList<String>());
			}
			clasificador.get(longitud).add(palabra);

			Set<Map.Entry<Integer, ArrayList<String>>> conjunto = clasificador.entrySet();
			Iterator<Map.Entry<Integer, ArrayList<String>>> i = conjunto.iterator();
			while (i.hasNext()) {
				Map.Entry<Integer, ArrayList<String>> entrada = i.next();
				System.out.println("Longitud " + entrada.getKey() + " " + entrada.getValue());
			}

			sc.close();

		}

	}
}