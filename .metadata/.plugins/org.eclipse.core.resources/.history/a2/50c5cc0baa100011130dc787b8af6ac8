package boletin;

import java.util.Scanner;

public class Ejercicio2 {

	public static void main(String[] args) {
		//creamos el scanner e inicializamos las variables
		Scanner sc=new Scanner(System.in);
		boolean fin=false;
		String palabra="";
		String uni="";
	
		//creamos un bucle para que nos pida datos hasta que se haya introducido FIN
		System.out.println("Introduce palabras ('FIN' para terminar)...");
		while(fin==false) {
				System.out.print("palabra :");
				palabra=sc.nextLine();
				if(palabra.startsWith("FIN"))
					fin=true;
				uni+=palabra+" ";
		}
		//mostramos la frase final
		System.out.println("> Frase: "+uni.replaceFirst("FIN",""));
		sc.close();

	}

}
